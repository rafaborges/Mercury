@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@foreach (var element in Model)
{
    <div class="row" id="row-@element.ID">
        <div class="panel panel-info" id="streamContainer">
            <div class="panel-heading clearfix">
                <h4 class="panel-title pull-left">@element.Name</h4>
                <div class="btn-toolbar pull-right">
                    <div class="btn-group" role="group" aria-label="Buttons">
                        <button type="button" class="btn btn-default btn-xs" onclick="startListening('@element.ID.ToString()');"><span class="glyphicon glyphicon-play" aria-label="Start this stream" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-default btn-xs" onclick="stopListening('@element.ID.ToString()');"><span class="glyphicon glyphicon-stop" aria-label="Stop this stream" aria-hidden="true"></span></button>
                    </div>
                    <div class="btn-group" role="group" aria-label="Buttons">
                        <button type="button" class="btn btn-default btn-xs" onclick="removeChart('@element.ID.ToString()');"><span class="glyphicon glyphicon-trash" aria-label="Add stream" aria-hidden="true"></span></button>
                    </div>
                </div>
            </div>
            <div class="panel-body" id="chart-@element.ID.ToString()" data-size="@element.BufferedValues.Count" data-type="@element.DataType" data-stream-id="@element.ID" data-buffered=@Html.Raw(new JavaScriptSerializer().Serialize(@element.BufferedValues))>
            </div>
        </div>
    </div>
}