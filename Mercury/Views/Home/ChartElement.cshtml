@model List<Mercury.Models.StreamListener>

@foreach (var element in Model)
{
    <div class="row">
        <div class="panel panel-info" id="streamContainer" data-id="@element.ID.ToString()">
            <div class="panel-heading clearfix">
                <h4 class="panel-title pull-left">@element.Name</h4>
                <div class="btn-toolbar pull-right">
                    <div class="btn-group" role="group" aria-label="Buttons">
                        <button type="button" class="btn btn-default btn-xs" id="start-@element.ID.ToString()"><span class="glyphicon glyphicon-play" aria-label="Start all streams" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-default btn-xs" id="stop-@element.ID.ToString()"><span class="glyphicon glyphicon-stop" aria-label="Stop all streams" aria-hidden="true"></span></button>
                    </div>
                    <div class="btn-group" role="group" aria-label="Buttons">
                        <button type="button" class="btn btn-default btn-xs" id="removeChartBtn-@element.ID.ToString()"><span class="glyphicon glyphicon-trash" aria-label="Add stream" aria-hidden="true"></span></button>
                    </div>
                </div>
            </div>
            <div class="panel-body" id="chart-@element.ID.ToString()">
                @*chart goes here!*@
            </div>
        </div>
    </div>
}